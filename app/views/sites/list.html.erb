	<tr><th>Site</th>
	<th>Id</th>
	<th>Url</th>	
		</tr>
	<% for site in @sites %>
		<tr>
			<td><%= link_to site.name, 'http://'+site.url %></td>
			<!-- <td>
					<%= site.name %></td> -->
			<td><%= site.id %></td>
			<td><%= site.url %></td>
		</tr>
		<% end %>
	
</table>
