<h1>Listing keywords</h1>

<table>
  <tr>
    <th>Word</th>
    <th>Site</th>
  </tr>

<% @keywords.each do |keyword| %>
  <tr>
    <td><%=h keyword.word %></td>
    <td><%=h keyword.site_id %></td>
    <td><%= link_to 'Show', keyword %></td>
    <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
    <td><%= link_to 'Destroy', keyword, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New keyword', new_keyword_path %>